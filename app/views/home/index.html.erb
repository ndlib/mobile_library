

<div style='padding-top:17px;'>
    <% if flash[:notice] %>
        <%= flash[:notice] %><br /><br />
    <% end %>

  <form action="http://library.nd.edu/utilities/search/ndu/default_tab" method="get">
    
    <input type="search" name="q" data-mini="true" data-theme="a" title="Search Library Catalog" placeholder="Search Library Catalog" accesskey="s" class="defaultTextActive defaultText" />
    <input type="hidden" name="vid" value="ndmobile">
    
  </form>

</div>


<div class="ui-grid-c" style='padding-top:15px;'>

  <div class="ui-block-a icon">
    <%= link_to image_tag("icons/ejournals.png", {:class => "icon"}), "http://ejl.library.nd.edu/" %>
    <br />
    <%= link_to "e-Journals", "http://ejl.library.nd.edu/", :class => "icon" %>
  </div>

  <div class="ui-block-b icon">
    <%= link_to image_tag("icons/articles.png", {:class => "icon"}), "http://xerxes.library.nd.edu/quicksearch/" %>
    <br />
    <%= link_to "Articles", "http://xerxes.library.nd.edu/quicksearch/", :class => "icon" %>
  </div>

  <div class="ui-block-c icon">
    <%= link_to image_tag("icons/atoz.png", {:class => "icon"}), mobiledatabases_path  %>
    <br />
    <%= link_to "Mobile Databases", mobiledatabases_path, :class => "icon" %>
  </div>

  <div class="ui-block-d icon">
    <%= link_to image_tag("icons/chat.png", {:class => "icon"}), { :action=>"index", :controller=>"asklib" }  %>
    <br />
    <%= link_to "Ask a Librarian", { :action=>"index", :controller=>"asklib" }, :class => "icon" %>
  </div>


  <div class="ui-block-a icon">
    <%= link_to image_tag("icons/imac.png", {:class => "icon"}), computers_path  %>
    <br />
    <%= link_to "Computer Finder", computers_path, :class => "icon" %>
  </div>

  <div class="ui-block-b icon">
    <%= link_to image_tag("icons/calendar.png", {:class => "icon"}), events_path  %>
    <br />
    <%= link_to "Events", events_path, :class => "icon" %>
  </div>

  <div class="ui-block-c icon">

    <%= link_to image_tag("icons/clock.png", {:class => "icon"}), locations_path  %>
    <br />
    <%= link_to "Hours & Locations", locations_path, :class => "icon" %>

  </div>

  <div class="ui-block-d icon">
    <%= link_to image_tag("icons/nd.png", {:class => "icon"}), "http://m.nd.edu" %>
    <br />
    <%= link_to "Mobile ND", "http://m.nd.edu", :class => "icon" %>
  </div>

</div>




